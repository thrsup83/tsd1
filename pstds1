$l = "C:\temp\sccm_log1.log"
$i = "C:\temp\SCCM_Client6-2020\ccmsetup.exe"

# Cria o log com a data atual
Get-Date > $l

if (Test-Path $i) {
    # 1. Instala (Note o $i correto e as aspas)
    Start-Process $i "/mp:NJNWKSMS08V.enterprise.pseg.com smssiteCode=A03 dnssuffix=enterprise.pseg.com /noservice /ForceInstall" -Wait
    
    # 2. Limpeza de identidades para Golden Image
    Stop-Service CcmExec -F -EA 0
    Remove-Item "$env:WinDir\SMSCFG.INI" -F -EA 0
    Get-ChildItem Cert:\LocalMachine\My | ? {$_.Subject -like "*SMS*"} | Remove-Item -F
    
    "SCCM e Limpeza OK" >> $l
} else {
    "Erro: Arquivo ccmsetup.exe nao encontrado em $i" >> $l
}



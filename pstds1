$Arm = "C:\Program Files (x86)\Common Files\Adobe\ARM\1.0\AdobeARM.exe"
$Log = "C:\temp\adobelog1.log"

Stop-Process -Name "AdobeARM" -Force -ErrorAction SilentlyContinue

if (Test-Path $Arm) {
    Start-Process -FilePath $Arm -ArgumentList "/noshowgui /silent /checknow"
    
    $Timeout = 300
    $Elapsed = 0
    $Updated = $false
    
    while ($Elapsed -lt $Timeout) {
        if (Get-Process -Name "msiexec" -ErrorAction SilentlyContinue) {
            $Updated = $true
            break
        }
        Start-Sleep -Seconds 10
        $Elapsed += 10
    }
}

if ($Updated) { "Status: Installing in background" } else { "Status: No activity detected" }

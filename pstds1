$Arm = "C:\Program Files (x86)\Common Files\Adobe\ARM\1.0\AdobeARM.exe"
$Acrobat = "C:\Program Files\Adobe\Acrobat DC\Acrobat\Acrobat.exe"

$V1 = "N/A"
if (Test-Path $Acrobat) { $V1 = (Get-Item $Acrobat).VersionInfo.ProductVersion }

Stop-Process -Name "AdobeARM" -Force -ErrorAction SilentlyContinue
Get-Service -Name "AdobeARMservice" | Start-Service -ErrorAction SilentlyContinue

if (Test-Path $Arm) {
    Start-Process -FilePath $Arm -ArgumentList "/noshowgui /silent /checknow /fallback" -Wait
}

$V2 = "N/A"
if (Test-Path $Acrobat) { $V2 = (Get-Item $Acrobat).VersionInfo.ProductVersion }

"V1:$V1 | V2:$V2"

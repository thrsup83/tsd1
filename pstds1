$Svc = Get-Service -Name "AdobeARMservice" -ErrorAction SilentlyContinue
$Msi = Get-Process -Name "msiexec" -ErrorAction SilentlyContinue
$Path = "C:\Program Files\Adobe\Acrobat DC\Acrobat\Acrobat.exe"
$Log = "C:\Windows\Temp\AdobeARM.log"

$Status = "Ready"
if ($null -eq $Svc) { $Status = "Service Missing" }
elseif ($Svc.Status -ne "Running") { $Status = "Service Stopped" }
if ($Msi) { $Status = "Installing Now..." }

$LastLog = "No Log"
if (Test-Path $Log) { $LastLog = Get-Content $Log -Tail 1 }

"Status:$Status | Log:$LastLog"

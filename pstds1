SELECT 
    SMS_R_System.Name, 
    SMS_G_System_ADD_REMOVE_PROGRAMS.DisplayName, 
    SMS_G_System_ADD_REMOVE_PROGRAMS.Version 
FROM 
    SMS_R_System 
INNER JOIN 
    SMS_G_System_ADD_REMOVE_PROGRAMS ON SMS_G_System_ADD_REMOVE_PROGRAMS.ResourceID = SMS_R_System.ResourceId 
WHERE 
    SMS_G_System_ADD_REMOVE_PROGRAMS.DisplayName LIKE "Notepad++%"

UNION

SELECT 
    SMS_R_System.Name, 
    SMS_G_System_ADD_REMOVE_PROGRAMS_64.DisplayName, 
    SMS_G_System_ADD_REMOVE_PROGRAMS_64.Version 
FROM 
    SMS_R_System 
INNER JOIN 
    SMS_G_System_ADD_REMOVE_PROGRAMS_64 ON SMS_G_System_ADD_REMOVE_PROGRAMS_64.ResourceID = SMS_R_System.ResourceId 
WHERE 
    SMS_G_System_ADD_REMOVE_PROGRAMS_64.DisplayName LIKE "Notepad++%"
